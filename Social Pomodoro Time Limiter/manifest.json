{
  "manifest_version": 3,
  "name": "Social Pomodoro Time Limiter",
  "version": "1.0.0",
  "description": "Giới hạn thời gian sử dụng mạng xã hội bằng phương pháp Pomodoro",
  "permissions": [
    "tabs",
    "webNavigation",
    "notifications",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "https://www.instagram.com/*",
    "https://instagram.com/*",
    "https://twitter.com/*",
    "https://www.twitter.com/*",
    "https://x.com/*",
    "https://www.x.com/*",
    "https://www.tiktok.com/*",
    "https://tiktok.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://facebook.com/*",
        "https://www.instagram.com/*",
        "https://instagram.com/*",
        "https://twitter.com/*",
        "https://www.twitter.com/*",
        "https://x.com/*",
        "https://www.x.com/*",
        "https://www.tiktok.com/*",
        "https://tiktok.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}

